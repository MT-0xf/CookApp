type Query {
    getUsers: [User]
    getRecipeData: [RecipeData]
    getRecipeCookProcedures: [RecipeData]
}

type Mutation {
    registerIngredients(ingredients: [InputIngredient]): RegisterIngredientResponse
}

type User {
    id: ID!
    name: String!
    password: String!
}

type RecipeData {
    recipeId: ID!
    dishName: String!
    ingredients: [Ingredient]
    cookProcedures: [CookProcedure]
}

type Ingredient {
    recipeId: ID!
    ingredientId: ID!
    amount: String!
    ingredientMaster: IngredientMaster!
}

input InputIngredient {
    recipeId: ID!
    ingredientId: ID!
    amount: String!
}

type IngredientMaster {
    ingredientId: ID!
    ingredientName: String!
}

type CookProcedure {
    recipeId: ID!
    order: Int!
    method: String!
    img: String!
}

type RegisterIngredientResponse {
    ingredients: [Ingredient]
    isRegister: Boolean!
    errorMessage: String
}